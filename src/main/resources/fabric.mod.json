{
  "schemaVersion": 1,
  "id": "figura",
  "version": "${version}",

  "name": "Figura",
  "description": "Allows you to customize your player model, extensively",
  "authors": [
    "Francy-Chan",
    "skyrina"
  ],
  "contact": {
    "homepage": "https://github.com/Kingdom-Of-The-Moon/FiguraRewriteRewrite/",
    "issues": "https://github.com/Kingdom-Of-The-Moon/FiguraRewriteRewrite/issues"
  },

  "license": "LGPL-2.1",
  "icon": "assets/figura/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "org.moon.figura.FiguraMod"
    ],
    "modmenu": [
      "org.moon.figura.config.ModMenuConfig"
    ]
  },
  "mixins": [
    "figura.mixins.json"
  ],
  "accessWidener": "figura.accesswidener",

  "depends": {
    "java": ">=${java_version}",
    "minecraft": "${minecraft_version}",
    "fabricloader": "*"
  },
  "conflicts": {
    "immersive_portals": "*",
    "canvas": "*"
  },
  "breaks": {
    "optifine": "*",
    "optifabric": "*"
  },
  "custom": {
    "assets_version": "${assets_version}",
    "modmenu": {
      "links": {
        "Discord": "https://discord.gg/ekHGHcH8Af",
        "Ko-fi": "https://ko-fi.com/francy_chan",
        "Modrinth":  "https://modrinth.com/mod/figura/",
        "GitHub":  "https://github.com/Kingdom-Of-The-Moon/FiguraRewriteRewrite/"
      }
    }
  }
}